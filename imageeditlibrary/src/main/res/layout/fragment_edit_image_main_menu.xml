<HorizontalScrollView
    android:id="@+id/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:scrollbars="none"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_paint"
            android:layout_width="42dp"
            android:layout_height="40dp"
            android:padding="18.2dp"
            android:src="@drawable/draw" />

        <ImageView
            android:id="@+id/btn_stickers"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="16dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:src="@drawable/lsticker"
            />

        <ImageView
            android:id="@+id/btn_filter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="16dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:src="@drawable/filter"/>

        <ImageView
            android:id="@+id/btn_crop"
            android:layout_width="40dp"
            android:padding="16.5dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:src="@drawable/crop"/>

        <ImageView
            android:id="@+id/btn_rotate"
            android:layout_width="41dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="16.6dp"
            android:src="@drawable/rotate" />

        <ImageView
            android:id="@+id/btn_text"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="17dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:src="@drawable/text_input"/>

        <ImageView
            android:id="@+id/btn_beauty"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="17dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:src="@drawable/beauty"/>

        <ImageView
            android:id="@+id/btn_text_sticker"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="7.7dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:src="@drawable/text_sticker"
            android:layout_marginRight="10dp"/>

    </LinearLayout>
</HorizontalScrollView>

